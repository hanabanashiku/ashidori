{
  "name": "ashidori",
  "version": "0.0.1",
  "description": "An anime scrobbler built into your web browser.",
  "scripts": {
    "start": "parcel src/manifest.json src/static/**/* src/**/*.{js,jsx,html} --host localhost --target webext-dev --config @parcel/config-webextension",
    "build": "parcel build manifest.json static/**/* src/**/*.{js,jsx,html} --target webext-prod --config @parcel/config-webextension",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clear-build-cache": "rm -rf .cache/ dist/",
    "lint": "eslint \"src/**/*.{js,jsx}\" --quiet",
    "format": "prettier --write \"src/**/*.{js,jsx}\""
  },
  "browserslist": [
    "last 2 chrome version",
    "last 2 firefox version"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hanabanashiku/ashidori.git"
  },
  "keywords": [
    "anime",
    "scrobbler",
    "kitsu",
    "kitsu.io",
    "mal",
    "my",
    "anime",
    "list",
    "anilist",
    "netflix",
    "crunchyroll",
    "hulu",
    "funimation",
    "watch",
    "tv",
    "movies",
    "content",
    "media"
  ],
  "author": "Michael MacLean",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/hanabanashiku/ashidori/issues"
  },
  "homepage": "https://github.com/hanabanashiku/ashidori#readme",
  "dependencies": {
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "axios": "^0.24.0",
    "jquery": "^3.6.0",
    "lodash": "^4.17.21",
    "prop-types": "^15.8.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@emotion/babel-plugin": "^11.7.2",
    "@emotion/babel-preset-css-prop": "^11.2.0",
    "@emotion/eslint-plugin": "^11.7.0",
    "@parcel/babel-preset-env": "^2.0.1",
    "@parcel/config-webextension": "^2.0.1",
    "@types/firefox-webext-browser": "^94.0.0",
    "babel-eslint": "^10.1.0",
    "babel-plugin-lodash": "^3.3.4",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.4",
    "parcel": "^2.0.1"
  },
  "targets": {
    "webext-dev": {
      "sourceMap": {
        "inline": true,
        "inlineSources": true
      }
    },
    "webext-prod": {}
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  }
}

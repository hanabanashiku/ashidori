{
  "name": "ashidori",
  "version": "0.0.1",
  "description": "An anime scrobbler built into your web browser.",
  "scripts": {
    "start": "parcel watch src/manifest.json src/options/**/**.html src/popup/**.html --target webext-dev",
    "build": "parcel build src/manifest.json src/options/**/**.html src/popup/**.html --target webext-prod",
    "test": "jest",
    "cover": "jest --collectCoverage",
    "clear-build-cache": "rm -rf .cache/ dist/",
    "lint": "eslint \"src/**/*.{js,jsx}\" --quiet",
    "format": "prettier --write \"src/**/*.{js,jsx}\""
  },
  "browserslist": [
    "last 2 chrome version",
    "last 2 firefox version"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hanabanashiku/ashidori.git"
  },
  "keywords": [
    "anime",
    "scrobbler",
    "kitsu",
    "kitsu.io",
    "mal",
    "my",
    "anime",
    "list",
    "anilist",
    "netflix",
    "crunchyroll",
    "hulu",
    "funimation",
    "watch",
    "tv",
    "movies",
    "content",
    "media"
  ],
  "author": "Michael MacLean",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/hanabanashiku/ashidori/issues"
  },
  "homepage": "https://github.com/hanabanashiku/ashidori#readme",
  "dependencies": {
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "@mui/icons-material": "^5.2.5",
    "@mui/lab": "^5.0.0-alpha.65",
    "@mui/material": "^5.0.0-rc.1",
    "@mui/x-data-grid": "^5.2.2",
    "axios": "^0.24.0",
    "jquery": "^3.6.0",
    "js-levenshtein": "^1.1.6",
    "lodash": "^4.17.21",
    "prop-types": "^15.8.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.25.0",
    "synchronized-promise": "^0.3.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/eslint-parser": "^7.16.5",
    "@babel/eslint-plugin": "^7.16.5",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-proposal-private-methods": "^7.16.7",
    "@babel/plugin-transform-react-jsx": "^7.16.7",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@emotion/babel-plugin": "^11.7.2",
    "@emotion/eslint-plugin": "^11.7.0",
    "@parcel/babel-preset-env": "^2.0.1",
    "@parcel/config-webextension": "^2.2.1",
    "@parcel/transformer-webmanifest": "^2.2.1",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/date-fns": "^2.6.0",
    "@types/firefox-webext-browser": "^94.0.0",
    "@types/jest": "^27.4.0",
    "babel-plugin-jsx-pragmatic": "^1.0.2",
    "babel-plugin-lodash": "^3.3.4",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-babel-module": "^5.3.1",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.0.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-module-resolver": "^1.4.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-testing-library": "^5.0.4",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "jest-axe": "^5.0.1",
    "jest-webextension-mock": "^3.7.19",
    "parcel": "^2.2.1",
    "parcel-reporter-static-files-copy": "^1.3.4",
    "webextension-polyfill": "^0.8.0"
  },
  "targets": {
    "webext-dev": {
      "distDir": "./dist",
      "sourceMap": {
        "inline": true,
        "inlineSources": true
      }
    },
    "webext-prod": {}
  },
  "staticFiles": {
    "staticPath": "src/static",
    "staticOutPath": "static"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/__tests__/**/*.(spec|test).[jt]s?(x)",
      "**/?(*.)+(spec|test).[jt]s?(x)"
    ],
    "setupFilesAfterEnv": [
      "./jest.setup.js"
    ],
    "setupFiles": [
      "jest-webextension-mock"
    ],
    "collectCoverageFrom": [
      "./src/**/*.{js,jsx,ts,tsx}"
    ]
  }
}
